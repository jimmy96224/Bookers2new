<%= form_with model: @book do |f| %>
 <h2>New book</h2>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>


<table>
 <thead>
     <tr>
      <th>img</th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
 </thead>
  <tbody>
<% @books.each do |book| %>
     <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>>
         <td><%= link_to book.title, book_path(book.id) %></td>
         <td><%= book.opinion %></td>
     </tr>

<% end %>
</tbody>
</table>
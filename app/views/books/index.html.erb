<%= form_with model: @book do |f| %>
 <h2>New book</h2>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>


<table>
 <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
 </thead>
  <tbody>
<% @books.each do |book| %>
     <tr>
         <!--user pic need to be fixed-->
         <!--<td>%= image_tag user.get_image %></td>-->

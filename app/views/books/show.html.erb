<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books detail</h2>
        <table class="table">
          <tbody>
            <td>
              <tr>
                <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br>
                  <%= link_to @book.user.name, user_path(@book.id) %>
                </td>
             　　<td>
             　  　<%= link_to book_path(@book.id) do %>
                  <%= @book.title %>
                  <% end %>
                </td>
                <td>
                  <%= @book.opinion %>
                </td>
                <% if @book.user == current_user %>
                <td><%= link_to "Edit", edit_book_path(@user.id) %></td>
                <td><%= link_to 'Destroy', books_path(current_user.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
                <% end %>
             </tr>
          </td>
        </tbody>
      </table>
    </div>
  </div>
</div>
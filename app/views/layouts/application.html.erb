<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/ded9a01a12.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="container-fluid", style="background-color: rgba(52, 58, 64, 1);">
      
    <% if user_signed_in? %>
    
    <nav class="navbar row px-3 py-4">
      <li class="nav-item", class="col-2">
        <%= link_to "Bookers", user_path(current_user.id) %>
      </li>
      <li class="nav-item">
        <%= link_to users_path do %>
          <i class="fas fa-home"></i>Home
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to users_path do %>
          <i class="fas fa-users"></i>Users
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to books_path do %>
          <i class="fas fa-book-open"></i>Books
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>Log out
        <% end %>
      </li>
    </nav>
    
    <% else %>
    
    <nav class="navbar navbar-light">
      <ul class="navbar-nav ml-auto">
      <li class="navbar-brand p-3">
        <%= link_to "Bookers", root_path %>
      </li>
      <li class="nav-item">
        <%= link_to root_path do %>
          <i class="fas fa-home"></i>Home
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to about_path do %>
          <i class="fas fa-link"></i>About
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_registration_path do %>
          <i class="fas fa-user-plus"></i>Sign up
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to new_user_session_path do %>
          <i class="fas fa-sign-in-alt"></i>Log in
        <% end %>
      </li>
      </ul>
    </nav>
    <% end %>
  </header>

    <%= yield %>

    <footer>CopyRight Infratop.inc</footer>


  </body>
</html>

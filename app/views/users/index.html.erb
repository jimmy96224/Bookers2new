<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/profile', user: @user %>
      <%= render 'books/post', book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
<h2>Users</h2>

<table class="table table-hover">
 <thead>
     <tr>
      <th>img</th>
      <th>name</th>
      <th></th>
     </tr>
 </thead>
  <tbody>
<% @users.each do |user| %>
     <tr>
         <td><%= image_tag user.get_profile_image(100,100) %></td>
         <td><%= user.name %></td>
         <td><%= link_to "show", book_path(user.id) %></td>
     </tr>

<% end %>
</tbody>
</table>

    </div>
  </div>
</div>
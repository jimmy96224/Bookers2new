<h2>User info</h2>

<div>

　<%= image_tag @user.get_profile_image(100,100) %>
  <h3>name <%= @user.name %></h3>
  <h3>introduction <%= @user.introduction %></h3>

</div>


<%= link_to "(仮)設定アイコン", edit_user_path(current_user.id) %>

<%= form_with model: @book do |f| %>
 <h2>New book</h2>
  <label>Title</label>
    <%= f.text_field :title %>
  <label>Opinion</label>
    <%= f.text_field :opinion %>
  <%= f.submit 'Create Book' %>
<% end %>

<h2>Books(Current User)</h2>


<table>
 <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
     </tr>
 </thead>
 <tbody>

<% @books.each do |book| %>
<tr>

  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
  <td><%= link_to book.title, book_path(current_user.id) %></td>
  <td><%= book.opinion %></td>

</tr>
<% end %>

</tbody>
</table>